<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="226dp"
        android:layout_height="188dp"
        app:layout_constraintBottom_toTopOf="@+id/EditTextEmaillogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashsmall" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditTextEmaillogin"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/EditTextPasswordlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" >

        <EditText
            android:id="@+id/editTextEmaillogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:importantForAutofill="no"
            android:singleLine="true"
            android:background="@color/white"
            android:hint="Email"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EditTextPasswordlogin"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/textViewForgotPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#32CD32"
        app:layout_constraintTop_toBottomOf="@+id/EditTextEmaillogin" >

        <EditText
            android:id="@+id/editTextPasswordlogin"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="@color/white"
            android:hint="password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:text="Forgot Password?"
        app:layout_constraintBottom_toTopOf="@+id/textViewNewToPowerOfStock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EditTextPasswordlogin" />

    <TextView
        android:id="@+id/textViewNewToPowerOfStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#000000"
        android:text="New to power of stocks?"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewAlreadyAccount"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForgotPassword" />

    <TextView
        android:id="@+id/textViewAlreadyAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="80dp"
        android:text="Sign up!"
        android:textColor="#32CD32"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewNewToPowerOfStock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNewToPowerOfStock"
        app:layout_constraintTop_toTopOf="@+id/textViewNewToPowerOfStock"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonSignUPSubmit"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#32CD32"
        android:text="Login"
        android:textColorHint="#32CD32"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewToPowerOfStock" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintBottom_toTopOf="@+id/EditTextEmaillogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="@+id/EditTextEmaillogin"
        app:layout_constraintTop_toBottomOf="@+id/EditTextEmaillogin"
        app:layout_constraintVertical_bias="0.43"
        app:srcCompat="@drawable/ic_baseline_email_24" />




</androidx.constraintlayout.widget.ConstraintLayout>